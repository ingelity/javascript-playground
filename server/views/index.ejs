<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body id="page">
    <h2>JavaScript playground - compiled by Webpack!</h2>
    <script type="text/javascript" src="http://localhost:8080/assets/bundle.js" charset="utf-8"></script>
    <script type="text/javascript" charset="utf-8">
      setInterval(function() {
        var className = document.getElementById('page').className;
        className = (className === 'light') ? '' : 'light';
        document.getElementById('page').setAttribute('class', className);
      }, 2000);
    </script>
  </body>
</html>
